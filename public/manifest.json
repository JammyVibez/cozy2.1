      "url": "/",
      "icons": [{ "src": "/icons/shortcut-post.png", "sizes": "96x96" }]
    },
    {
      "name": "Notifications",
      "short_name": "Alerts",
      "description": "View notifications",
      "url": "/notifications",
      "icons": [{ "src": "/icons/shortcut-notifications.png", "sizes": "96x96" }]
