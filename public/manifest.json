  "screenshots": [
    {
      "src": "/screenshots/desktop-home.png",
      "sizes": "1280x720",
      "type": "image/png",
      "form_factor": "wide",
      "label": "Home feed on desktop"
    },
    {
      "src": "/screenshots/mobile-home.png",
      "sizes": "375x812",
